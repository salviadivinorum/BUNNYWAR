                <local:UzivPrvekPolicko x:Name="G2" Grid.Column="6" Grid.Row="6" Background="WhiteSmoke" MouseLeftButtonDown="VsechnaPolicka_MouseLeftButtonDown" MouseRightButtonDown="VsechnaPolicka_MouseRightButtonDown" MouseEnter="VsechnaPolicka_MouseEnter" MouseLeave="VsechnaPolicka_MouseLeave"/>
                <local:UzivPrvekPolicko x:Name="G3" Grid.Column="6" Grid.Row="5" Background="Gray" MouseLeftButtonDown="VsechnaPolicka_MouseLeftButtonDown" MouseRightButtonDown="VsechnaPolicka_MouseRightButtonDown" MouseEnter="VsechnaPolicka_MouseEnter" MouseLeave="VsechnaPolicka_MouseLeave"/>
                <local:UzivPrvekPolicko x:Name="G4" Grid.Column="6" Grid.Row="4" Background="WhiteSmoke" MouseLeftButtonDown="VsechnaPolicka_MouseLeftButtonDown" MouseRightButtonDown="VsechnaPolicka_MouseRightButtonDown" MouseEnter="VsechnaPolicka_MouseEnter" MouseLeave="VsechnaPolicka_MouseLeave"/>
                <local:UzivPrvekPolicko x:Name="G5" Grid.Column="6" Grid.Row="3" Background="Gray" MouseLeftButtonDown="VsechnaPolicka_MouseLeftButtonDown" MouseRightButtonDown="VsechnaPolicka_MouseRightButtonDown" MouseEnter="VsechnaPolicka_MouseEnter" MouseLeave="VsechnaPolicka_MouseLeave"/>
                <local:UzivPrvekPolicko x:Name="G6" Grid.Column="6" Grid.Row="2" Background="WhiteSmoke" MouseLeftButtonDown="VsechnaPolicka_MouseLeftButtonDown" MouseRightButtonDown="VsechnaPolicka_MouseRightButtonDown" MouseEnter="VsechnaPolicka_MouseEnter" MouseLeave="VsechnaPolicka_MouseLeave"/>
                <local:UzivPrvekPolicko x:Name="G7" Grid.Column="6" Grid.Row="1" Background="Gray" MouseLeftButtonDown="VsechnaPolicka_MouseLeftButtonDown" MouseRightButtonDown="VsechnaPolicka_MouseRightButtonDown" MouseEnter="VsechnaPolicka_MouseEnter" MouseLeave="VsechnaPolicka_MouseLeave"/>
                <local:UzivPrvekPolicko x:Name="G8" Grid.Column="6" Grid.Row="0" Background="WhiteSmoke" MouseLeftButtonDown="VsechnaPolicka_MouseLeftButtonDown" MouseRightButtonDown="VsechnaPolicka_MouseRightButtonDown" MouseEnter="VsechnaPolicka_MouseEnter" MouseLeave="VsechnaPolicka_MouseLeave"/>
                <!--Sloupec H-->
                <local:UzivPrvekPolicko x:Name="H1" Grid.Column="7" Grid.Row="7" Background="WhiteSmoke" MouseLeftButtonDown="VsechnaPolicka_MouseLeftButtonDown" MouseRightButtonDown="VsechnaPolicka_MouseRightButtonDown" MouseEnter="VsechnaPolicka_MouseEnter" MouseLeave="VsechnaPolicka_MouseLeave"/>
                <local:UzivPrvekPolicko x:Name="H2" Grid.Column="7" Grid.Row="6" Background="Gray" MouseLeftButtonDown="VsechnaPolicka_MouseLeftButtonDown" MouseRightButtonDown="VsechnaPolicka_MouseRightButtonDown" MouseEnter="VsechnaPolicka_MouseEnter" MouseLeave="VsechnaPolicka_MouseLeave"/>
                <local:UzivPrvekPolicko x:Name="H3" Grid.Column="7" Grid.Row="5" Background="WhiteSmoke" MouseLeftButtonDown="VsechnaPolicka_MouseLeftButtonDown" MouseRightButtonDown="VsechnaPolicka_MouseRightButtonDown" MouseEnter="VsechnaPolicka_MouseEnter" MouseLeave="VsechnaPolicka_MouseLeave"/>
                <local:UzivPrvekPolicko x:Name="H4" Grid.Column="7" Grid.Row="4" Background="Gray" MouseLeftButtonDown="VsechnaPolicka_MouseLeftButtonDown" MouseRightButtonDown="VsechnaPolicka_MouseRightButtonDown" MouseEnter="VsechnaPolicka_MouseEnter" MouseLeave="VsechnaPolicka_MouseLeave"/>
                <local:UzivPrvekPolicko x:Name="H5" Grid.Column="7" Grid.Row="3" Background="WhiteSmoke" MouseLeftButtonDown="VsechnaPolicka_MouseLeftButtonDown" MouseRightButtonDown="VsechnaPolicka_MouseRightButtonDown" MouseEnter="VsechnaPolicka_MouseEnter" MouseLeave="VsechnaPolicka_MouseLeave"/>
                <local:UzivPrvekPolicko x:Name="H6" Grid.Column="7" Grid.Row="2" Background="Gray" MouseLeftButtonDown="VsechnaPolicka_MouseLeftButtonDown" MouseRightButtonDown="VsechnaPolicka_MouseRightButtonDown" MouseEnter="VsechnaPolicka_MouseEnter" MouseLeave="VsechnaPolicka_MouseLeave"/>
                <local:UzivPrvekPolicko x:Name="H7" Grid.Column="7" Grid.Row="1" Background="WhiteSmoke" MouseLeftButtonDown="VsechnaPolicka_MouseLeftButtonDown" MouseRightButtonDown="VsechnaPolicka_MouseRightButtonDown" MouseEnter="VsechnaPolicka_MouseEnter" MouseLeave="VsechnaPolicka_MouseLeave"/>
                <local:UzivPrvekPolicko x:Name="H8" Grid.Column="7" Grid.Row="0" Background="Gray" MouseLeftButtonDown="VsechnaPolicka_MouseLeftButtonDown" MouseRightButtonDown="VsechnaPolicka_MouseRightButtonDown" MouseEnter="VsechnaPolicka_MouseEnter" MouseLeave="VsechnaPolicka_MouseLeave"/>
            </Grid>
            
            <!-- Popisky jsem dal take do mrizek, vlevo a dole -->
            <Grid x:Name="MrizOsaY" Grid.Row="1" Grid.Column="0" Height="400" Width="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <TextBlock Text="8" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" />
                <TextBlock Text="7" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" />
                <TextBlock Text="6" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" />
                <TextBlock Text="5" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" />
                <TextBlock Text="4" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" />
                <TextBlock Text="3" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" />
                <TextBlock Text="2" Grid.Row="6" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" />
                <TextBlock Text="1" Grid.Row="7" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" />
            </Grid>
            <Grid x:Name="MrizOsaX" Grid.Column="1" Grid.Row="2" Width="400">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="A" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="B" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="C" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="D" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="E" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="F" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="G" Grid.Column="6" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Text="H" Grid.Column="7" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
            </Grid>
            <Grid Name="MrizPravePanely"  Grid.Column="2" Grid.Row="1" Height="420" Width="235" Margin="0"  VerticalAlignment="Center" HorizontalAlignment="Left" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="110"/>
                    <RowDefinition Height="110"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- nasleduji me 3 Group Boxy -->
                <GroupBox x:Name="hrac1GroupBox" Width="225" Height="110"  Header="Hráč 1" HorizontalAlignment="Left" Grid.Row="0" 
            	VerticalAlignment="Center" BorderBrush="LightGray" Margin="0,0,0,0" FontWeight="Bold">
                    <Grid Height="90" Width="215" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="85"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="jmeno1TextBlock" Grid.Column="0" Grid.Row="0" Text="Jméno:" FontWeight="Normal"/>
                        <TextBlock Text="Barva kamenů:" Grid.Column="0" Grid.Row="1" FontWeight="Normal"/>
                        <TextBlock Text="Typ hráče:" Grid.Column="0" Grid.Row="2"  FontWeight="Normal"/>
                        <TextBlock Text="Obtížnost:" Grid.Column="0" Grid.Row="3"  FontWeight="Normal"/>
                        <TextBlock Text="Zbývá kamenů:" Grid.Column="0" Grid.Row="4" FontWeight="Normal"/>
                        <TextBlock Name="jmenoH1"  Grid.Column="1" Grid.Row="0"  FontWeight="DemiBold"
                               Text="{Binding NastavText}"/>
                        <TextBlock Name="barvaKamenuH1" Text="bílá" Grid.Column="1" Grid.Row="1" FontWeight="DemiBold"/>
                        <TextBlock Name="typHrace1" Grid.Column="1" Grid.Row="2"  FontWeight="DemiBold" 
                               Text="{Binding NastavText}">
                        </TextBlock>
                        <TextBlock Name="obtiznost1" Grid.Column="1" Grid.Row="3"  FontWeight="DemiBold"
                               Text="{Binding NastavText}"/>
                        <TextBlock Name="zbyvaKamenuH1" Text="16" Grid.Column="1" Grid.Row="4" FontWeight="DemiBold"/>
                        <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="5" VerticalAlignment="Bottom">
                            <Image Name="hrac1FigurkaXAML" Source="Ikonky/Pawn-whitePNG-Clear.png" Height="93" Width="40"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox x:Name="hrac2GroupBox" Width="225" Height="110"  Header="Hráč 2" HorizontalAlignment="Left" Grid.Row="1" 
            	VerticalAlignment="Center" BorderBrush="LightGray" Margin="0,0,0,0" FontWeight="Bold">

                    <Grid Height="90" Width="215" HorizontalAlignment="Left" VerticalAlignment="Center" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="85"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="jmeno2TextBlock" Grid.Column="0" Grid.Row="0" Text="Jméno:" FontWeight="Normal"/>
                        <TextBlock Text="Barva kamenů:" Grid.Column="0" Grid.Row="1" FontWeight="Normal"/>
                        <TextBlock Text="Typ hráče:" Grid.Column="0" Grid.Row="2"  FontWeight="Normal"/>
                        <TextBlock Text="Obtížnost:" Grid.Column="0" Grid.Row="3"  FontWeight="Normal"/>
                        <TextBlock Text="Zbývá kamenů:" Grid.Column="0" Grid.Row="4" FontWeight="Normal"/>
                        <TextBlock Name="jmenoH2" Grid.Column="1" Grid.Row="0" FontWeight="DemiBold"
                               Text="{Binding NastavText}"/>
                        <TextBlock Name="barvaKamenuH2" Text="černá" Grid.Column="1" Grid.Row="1" FontWeight="DemiBold"/>
                        <TextBlock Name="typHrace2"  Grid.Column="1" Grid.Row="2"  FontWeight="DemiBold"
                               Text="{Binding NastavText}"/>
                        <TextBlock Name="obtiznost2" Grid.Column="1" Grid.Row="3"  FontWeight="DemiBold"
                               Text="{Binding NastavText}"/>
                        <TextBlock Name="zbyvaKamenuH2" Text="16" Grid.Column="1" Grid.Row="4" FontWeight="DemiBold"/>
                        <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="5" VerticalAlignment="Bottom">
                            <Image Name="hrac2FigurkaXAML"  Source="Ikonky/Pawn-blackPNG-Clear.png" Height="93" Width="40"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox x:Name="historieTahuGroupBox" Width="225" Height="193"  Header="Historie tahů" 
                      Grid.Row="2"  HorizontalAlignment="Left"
                      VerticalAlignment="Top"  BorderBrush="LightGray" FontWeight="Bold" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"  >

                    <ListBox Name="historieTahuListBox"  Margin="-5,0,0,0"  FontWeight="Normal" BorderBrush="{x:Null}" FontFamily="Arial Narrow"  
                         SelectionChanged="historieTahuListBox_SelectionChanged">
                        <!--PreviewMouseDown="historieTahuListBox_PreviewMouseDown"  -->
                    </ListBox>
                </GroupBox>
            </Grid>            
            
            <!--Toto je muj TOOLBAR s tlacitky v TOOLBAR TRAY-->
            <ToolBarTray Name="podnosPaneluNastroju"  Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="35" 
                     VerticalAlignment="Top" Background="#FFF0F0F0" Width="675">
                <ToolBar Name="panelNastroju" Background="#FFF0F0F0" HorizontalAlignment="Left" 
                     Height="35" Width="670">
                    <Button Name="tlacitkoNovaHra" Height="35" Width="50" ToolTip="Nová hra" VerticalContentAlignment="Top" Click="tlacitkoNovaHra_Click" >
                        <StackPanel>
                            <Image Source="Ikonky/novaHra.ico" Height="28" Width="40"/>
                        </StackPanel>
                    </Button>
                    <Button Name="tlacitkoOtevrit" Height="35" Width="50" ToolTip="Otevřít uloženou hru" Click="tlacitkoOtevrit_Click">
                        <StackPanel>
                            <Image Source="Ikonky/open-file-icon.png" Height="28" Width="40"/>
                        </StackPanel>
                    </Button>
                    <Button Name="tlacitkoUlozit"  Height="35" Width="50" ToolTip="Uložit rozehranou hru" Click="tlacitkoUlozit_Click" >
                        <StackPanel>
                            <Image Source="Ikonky/Save-icon32.png" Height="28" Width="40"/>
                        </StackPanel>
                    </Button>
                    <Button Name="tlacitkoUlozitJako"  Height="35" Width="50" ToolTip="Uložit rozehranou hru" Click="tlacitkoUlozitJako_Click">
                        <StackPanel>
                            <Image Source="Ikonky/Save-as-icon32.png" Height="28" Width="40" ToolTip="Uložit rozehranou hru jako"  />
                        </StackPanel>
                    </Button>
                    <Separator/>
                    <Button Name="tlacitkoUndo" Height="35" Width="50" ToolTip="Tah zpět" VerticalContentAlignment="Center" Click="tlacitkoUndo_Click" >
                        <StackPanel>
                            <Image Source="Ikonky/undo.ico" Height="28" Width="40" />
                        </StackPanel>
                    </Button>
                    <Button Name="tlacitkoRedo" Height="35" Width="50" ToolTip="Tah vpřed" VerticalContentAlignment="Center" Click="tlacitkoRedo_Click" >
                        <StackPanel>
                            <Image Source="Ikonky/redo.ico" Height="28" Width="40"/>
                        </StackPanel>
                    </Button>
                    <Separator/>
                    <Button Name="tlacitkoHraj" Height="35" Width="50" ToolTip="Pokračovat (výpočet tahu)" VerticalContentAlignment="Center" Click="tlacitkoHraj_Click" >
                        <StackPanel>
                            <Image Source="Ikonky/play.ico" Height="28" Width="40"/>
                        </StackPanel>
                    </Button>
                    <Button Name="tlacitoPause" Height="35" Width="50" ToolTip="Pauza (výpočet tahu)" VerticalContentAlignment="Center" Click="tlacitkoPause_Click" >
                        <StackPanel>
                            <Image Source="Ikonky/pause.ico" Height="28" Width="40"/>
                        </StackPanel>
                    </Button>
                    <Button Name="tlacitkoStopPartie" Height="35" Width="50" ToolTip="Ukončit rozehranou partii" VerticalContentAlignment="Center" Click="tlacitkoStopPartie_Click"  >
                        <StackPanel>
                            <Image Source="Ikonky/stop.ico" Height="28" Width="40"/>
                        </StackPanel>
                    </Button>
                    <Separator/>
                    <Button Name="tlacitkoNejlepsiTah" Height="35" Width="50" ToolTip="Nápověda nejlepšího tahu" VerticalContentAlignment="Center" Click="tlacitkoNejlepsiTah_Click" >
                        <StackPanel>
                            <Image Source="Ikonky/bulb.ico" Height="28" Width="40"/>
                        </StackPanel>
                    </Button>
                    <Button Name="tlacitkoNastaveni" Height="35" Width="50" ToolTip="Nastavení hráčů" 
                        VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,0.2" Click="tlacitkoNastaveni_Click" >
                        <StackPanel>
                            <Image Source="Ikonky/zmenabarev.ico" Height="28" Width="40"/>
                        </StackPanel>
                    </Button>
                    <Separator/>                   
                </ToolBar>
            </ToolBarTray>

            <!--Následuje 2x STATUS BAR v DockPanelu c1 a c2-->
            <DockPanel Name="dockPanelc1" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="3">
                <StatusBar DockPanel.Dock="Bottom">
                    <StatusBar.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="25"/>
                                    <ColumnDefinition Width="4.5"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="25"/>
                                    <ColumnDefinition Width="4.5"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                            </Grid>
                        </ItemsPanelTemplate>
                    </StatusBar.ItemsPanel>
                    <StatusBarItem Grid.Column="0">
                        <TextBlock Text="Na tahu je hráč číslo:"/>
                    </StatusBarItem>
                    <StatusBarItem Grid.Column="1">
                        <TextBlock Name ="cisloHraceTextBlock"  Text="1"/>
                    </StatusBarItem>
                    <Separator Grid.Column="2"/>
                    <StatusBarItem Grid.Column="3">
                        <TextBlock Text="Počet tahů bez přeskoků:"/>
                    </StatusBarItem>
                    <StatusBarItem Grid.Column="4" HorizontalAlignment="Left">
                        <TextBlock Name ="pocetTahuBPTextBlock" Text="0"/>
                    </StatusBarItem>
                    <Separator Grid.Column="5"/>
                    <StatusBarItem Grid.Column="6">
                        <TextBlock  Text="Výpočet tahu:"  VerticalAlignment="Bottom" />
                    </StatusBarItem>
                    <StatusBarItem Grid.Column="7" HorizontalAlignment="Left">
                        <TextBlock Name ="vypocetTextBlock" Text=""/>
                    </StatusBarItem>

                    <StatusBarItem Grid.Column="8">
                        <ProgressBar Name="mujProgressBar" Value="0" Width="225" Height="16"/>
                    </StatusBarItem>
                </StatusBar>
            </DockPanel>
            <DockPanel Name="dockPanelc2"  Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="3">
                <StatusBar DockPanel.Dock="Bottom">
                    <StatusBar.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="53"/>
                                    <ColumnDefinition Width="388"/>
                                    <ColumnDefinition Width="4.5"/>
                                    <ColumnDefinition Width="*"/>

                                </Grid.ColumnDefinitions>
                            </Grid>
                        </ItemsPanelTemplate>
                    </StatusBar.ItemsPanel>
                    <StatusBarItem Grid.Column="0">
                        <TextBlock Text="Hlášení:" VerticalAlignment="Center" FontWeight="Bold"/>
                    </StatusBarItem>
                    <StatusBarItem Grid.Column="1">
                        <TextBlock Name ="hlaseniTextBlock" Text="{Binding NastavText}"
                               HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" />
                    </StatusBarItem>
                    <Separator Grid.Column="2"/>
                    <StatusBarItem Grid.Column="3">
                        <TextBlock Name="druheHlaseniTextBlock" Text="{Binding NastavText}"
                               HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold">
                        </TextBlock>
                    </StatusBarItem>
                </StatusBar>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
