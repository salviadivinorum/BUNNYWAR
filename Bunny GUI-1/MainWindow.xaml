<Window x:Name="hlavniOkno" x:Class="Bunny_GUI_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bunny_GUI_1"
        mc:Ignorable="d"
        Title="Bunny War" Height="597" Width="685" WindowStartupLocation="CenterScreen" Icon="Ikonky/bunnysedy.ico" 
        ResizeMode="CanMinimize" Background="White" 
        Closing="hlavniOkno_Closing" KeyDown="hlavniOkno_KeyDown" >
    <Grid Name="superHlavniMriz" Height="565" Width="675" VerticalAlignment="Top" HorizontalAlignment="Left">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>            
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>        
        <!--Toto je moje hlavní menu neboli Panel nabidek - MENU BAR-->
        <Menu x:Name="hlavniMenuNahore" Grid.ColumnSpan="3" Grid.Row="0" HorizontalAlignment="Stretch"
              VerticalAlignment="Top" Height="25" Background="#FFF0F0F0" >
            <MenuItem x:Name="menuSoubor" Header="_Soubor" Width="58" Height="25">
                <MenuItem x:Name="menuNovaHra" Header="_Nová hra" Click="tlacitkoNovaHra_Click"
                          InputGestureText="Ctrl+N" ToolTip="Začít novou hru" >
                    <MenuItem.Icon>
                        <Image Source="Ikonky/novaHra.ico" Height="16" Width="16" Stretch="UniformToFill"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="menuNacistHru" Header="_Otevřít hru" Click="tlacitkoOtevrit_Click" 
                          InputGestureText="Ctrl+O" ToolTip="Otevřít uloženou hru">
                    <MenuItem.Icon>
                        <Image Source="Ikonky/open-file-icon.png" Height="16" Width="16" Stretch="UniformToFill"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="menuUlozitHru" Header="_Uložit hru" Click="tlacitkoUlozit_Click" 
                          InputGestureText="Ctrl+S" ToolTip="Uložit stav hry do souboru">
                    <MenuItem.Icon>
                        <Image Source="Ikonky/save-icon32.png" Height="16" Width="16" Stretch="UniformToFill"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="menuUlozitHruJako" Header="Uložit hru _jako ..." Click="tlacitkoUlozitJako_Click" 
                          InputGestureText="F12" ToolTip="Uložit stav hry pod jiným názvem">
                    <MenuItem.Icon>
                        <Image Source="Ikonky/Save-as-icon32.png" Height="16" Width="16" Stretch="UniformToFill"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="menuUkoncitPogram" Header="U_končit program" Click="menuUkoncitPogram_Click" 
                          InputGestureText="ALT+F4" ToolTip="Ukončit aplikaci">
                    <MenuItem.Icon>
                        <Image Source="Ikonky/ukoncitProgram.ico" Height="16" Width="16" Stretch="UniformToFill"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>   
            <MenuItem x:Name="menuNastaveni" Header="_Upravit" Width="60" Height="25">
                <MenuItem x:Name="menuTahZpet" Header="Tah _zpět" Click="tlacitkoUndo_Click" 
                          InputGestureText="CTRL+U" ToolTip="Provést tah zpět">
                    <MenuItem.Icon>
                        <Image Source="Ikonky/undo.ico" Height="16" Width="16" Stretch="UniformToFill"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="tahVpred" Header="Tah _vpřed" Click="tlacitkoRedo_Click" 
                          InputGestureText="CTRL+R" ToolTip="Provést tah vpřed">
                    <MenuItem.Icon>
                        <Image Source="Ikonky/redo.ico" Height="16" Width="16" Stretch="UniformToFill"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="menuPlay" Header="P_okračovat (výpočet tahu)" Click="tlacitkoHraj_Click" 
                          InputGestureText="CTR+P" ToolTip="Pokračování ve výpočtu tahů">
                    <MenuItem.Icon>
                        <Image Source="Ikonky/play.ico" Height="16" Width="16" Stretch="UniformToFill"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="menuPauza" Header="_Pauza (výpočet tahu)" Click="tlacitkoPause_Click" 
                          InputGestureText="Space" ToolTip="Pozastavit výpočet tahů">
                    <MenuItem.Icon>
                        <Image Source="Ikonky/pause.ico" Height="16" Width="16" Stretch="UniformToFill"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="menuUkoncitPartii" Header="_Ukončit partii" 
                          InputGestureText="Ctrl+K" ToolTip="Ukonči rozehranou partii hry" >
                    <MenuItem.Icon>
                        <Image Source="Ikonky/stop.ico" Height="16" Width="16" Stretch="UniformToFill"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem x:Name="menuNastroje" Header="Nás_troje" Width="65" Height="25">
                <MenuItem x:Name="menuNastavitHrace" Header="_Nastavení hráčů" Click="tlacitkoNastaveni_Click" 
                          InputGestureText="Ctrl+H" ToolTip="Změní parametry hry">
                    <MenuItem.Icon>
                        <Image Source="Ikonky/zmenabarev.ico" Height="16" Width="16" Stretch="UniformToFill"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="menuProhoditStrany" Header="_Prohození stran" Click="menuProhoditStrany_Click"
                          InputGestureText="Ctrl+W" ToolTip="Prohození stran na desce">
                    <MenuItem.Icon>
                        <Image Source="Ikonky/vymenastran.ico" Height="16" Width="16" Stretch="UniformToFill"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem x:Name="menuNapoveda" Header="Nápově_da" Width="70" Height="25">
                <MenuItem x:Name="menuNejTah" Header="Nápověda ne_jlepšího tahu" Click="tlacitkoNejlepsiTah_Click" 
                          InputGestureText="Ctrl+B" ToolTip="Nápověda pro lidského hráče">
                    <MenuItem.Icon>
                        <Image Source="Ikonky/bulb.ico" Height="16" Width="16" Stretch="UniformToFill"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="menuHelp" Header="Ná_pověda" Click="menuHelp_Click" ToolTip="Ovládání a pravidla hry" 
                          InputGestureText="F1">
                    <MenuItem.Icon>
                        <Image Source="Ikonky/openbook.ico" Height="16" Width="16" Stretch="UniformToFill"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="menuOApp" Header="_O aplikaci" Click="menuOApp_Click" ToolTip="Informace o aplikaci">
                    <MenuItem.Icon>
                        <Image Source="Ikonky/aha.ico" Height="16" Width="16" Stretch="UniformToFill"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>     
